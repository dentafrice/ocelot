{
    "pipeline": {
        "id": "86b48bf6-6e55-4a2e-991a-9c15f1f77b80",
        "name": "Taraval Police Monitor"
    },
    "pipeline_schedule": {
        "type": "interval",
        "schedule": "21600"
    },
    "tasks": {
        "url_input": {
            "type": "URLInput",
            "config": {
                "url": "https://gist.githubusercontent.com/dentafrice/0713ec11b44ae7df9873/raw/a1e1a99f45606a91839b939eb003d5490f871ba3/test.rss"
            }
        },
        "xml_parser": {
            "type": "XMLParseOperation"
        },
        "rss": {
            "type": "XMLRSSParseOperation"
        },
        "crime_filter": {
            "type": "DictFilterOperation",
            "config": {
                "config": {
                    "type": "all",
                    "rules": [
                        {
                            "type": "equals",
                            "path": "$.category",
                            "value": "Daily Crime Report"
                        }
                    ]
                }
            }
        },
        "new_filter": {
            "type": "NewItemFilterOperation",
            "config": {
                "identifier": "taraval-items"
            }
        },
        "item_mapper": {
            "type": "DictMapperOperation",
            "config": {
                "config": {
                    "title": {
                        "type": "extract",
                        "config": {
                            "path": "$.title"
                        }
                    },
                    "link": {
                        "type": "extract",
                        "config": {
                            "path": "$.link"
                        }
                    }
                }
            }
        },
        "message_format": {
            "type": "MessageFormatOperation",
            "config": {
                "message": "New Taraval Police Items:\n---\n{% for item in data %}{{item.title}}\n{{item.link}}\n\n{% endfor %}"
            }
        },
        "message_creator": {
            "type": "DictCreateOperation",
            "config": {
                "config": {
                    "key": "plain_message"
                }
            }
        },
        "email_mapper": {
            "type": "DictMapperOperation",
            "config": {
                "config": {
                    "plain_message": {
                        "type": "extract",
                        "config": {
                            "path": "$.plain_message"
                        }
                    },
                    "from_email": {
                        "type": "insert",
                        "config": {
                            "value": "ocelot@caleb.io"
                        }
                    },
                    "subject": {
                        "type": "insert",
                        "config": {
                            "value": "New Taraval Police Items"
                        }
                    },
                    "to_email": {
                        "type": "insert",
                        "config": {
                            "value": "me@caleb.io"
                        }
                    }
                }
            }
        },
        "email_output": {
            "type": "EmailOutput"
        }
    },
    "task_connections": {
        "url_input": [
            "xml_parser"
        ],
        "xml_parser": [
            "rss"
        ],
        "rss": [
            "crime_filter"
        ],
        "crime_filter": [
            "new_filter"
        ],
        "new_filter": [
            "item_mapper"
        ],
        "item_mapper": [
            "message_format"
        ],
        "message_format": [
            "message_creator"
        ],
        "message_creator": [
            "email_mapper"
        ],
        "email_mapper": [
            "email_output"
        ]
    }
}
